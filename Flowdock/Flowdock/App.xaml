<Application
    x:Class="Flowdock.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
	xmlns:caliburn="clr-namespace:Flowdock.Caliburn">

    <!--Application Resources-->
    <Application.Resources>
		<caliburn:FlowdockBootstrapper x:Key="bootstrapper" />
		
        <local:LocalizedStrings xmlns:local="clr-namespace:Flowdock" x:Key="LocalizedStrings"/>
		<ResourceDictionary x:Key="applicationResources">
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Resources/UsersPivotResourceDictionary.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>

</Application>